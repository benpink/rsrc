{
  "name": "rsrc-monorepo",
  "private": true,
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.5.0"
  },
  "scripts": {
    "build": "lerna run build",
    "prebuild": "lerna run build",
    "dev": "lerna run dev --parallel --stream",
    "lint": "lerna run lint",
    "flow": "lerna run flow",
    "jest": "lerna run jest",
    "release": "lerna version",
    "publish": "yarn build && lerna publish",
    "publish:dev": "yarn build && lerna publish --npm-tag next",
    "test": "lerna run test",
    "up": "yarn upgrade-interactive --latest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ]
  },
  "eslintIgnore": [
    "**/node_modules"
  ],
  "jest": {
    "preset": "jest-preset-signalsciences"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "babel-preset-signalsciences": "^0.0.1",
    "eslint-config-signalsciences": "^0.0.1",
    "flow-bin": "^0.88.0",
    "husky": "^1.2.0",
    "jest-preset-signalsciences": "^0.0.2",
    "lerna": "^3.4.3",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^8.1.0",
    "pre-commit": "1.2.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup-config-signalsciences": "^0.0.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
