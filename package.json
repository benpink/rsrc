{
  "name": "rsrc",
  "author": "Signal Sciences",
  "description": "React components for managing async fetch state",
  "version": "1.0.3",
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "extends browserslist-config-signalsciences"
  ],
  "keywords": [
    "react",
    "resource",
    "fetch",
    "cache"
  ],
  "homepage": "https://github.com/signalsciences/rsrc",
  "bugs": {
    "url": "https://github.com/signalsciences/rsrc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalsciences/rsrc.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/index.js",
  "module": "dist/rsrc.esm.js",
  "umd:main": "dist/rsrc.umd.production.js",
  "scripts": {
    "dev": "yarn start",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "start": "cross-env NODE_ENV=development rollup -c --watch",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prebuild": "rimraf dist",
    "prepublish": "yarn run build",
    "format": "prettier --write '{docs,examples,src,test,website}/**/*.{js,md}' './*.{js,md}'",
    "lint-staged": "lint-staged",
    "lint": "flow && eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ],
    "rules": {
      "react/static-property-placement": "off"
    },
    "settings": {
      "polyfills": [
        "fetch",
        "Promise"
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "preset": "jest-preset-signalsciences",
    "setupFiles": [
      "./test/setupJest.js"
    ]
  },
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@testing-library/react": "9.3.0",
    "babel-preset-signalsciences": "2.0.1",
    "browserslist-config-signalsciences": "1.0.2",
    "core-js": "^3.3.5",
    "cross-env": "6.0.3",
    "eslint": "6.6.0",
    "eslint-config-signalsciences": "2.0.1",
    "eslint-plugin-compat": "3.3.0",
    "eslint-plugin-flowtype": "4.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "flow-bin": "0.110.1",
    "husky": "3.0.9",
    "isomorphic-unfetch": "3.0.0",
    "jest": "24.9.0",
    "jest-fetch-mock": "2.1.2",
    "jest-preset-signalsciences": "3.0.1",
    "lint-staged": "9.4.2",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.0",
    "rollup": "1.26.0",
    "rollup-config-signalsciences": "2.0.1"
  }
}
