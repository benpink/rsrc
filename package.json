{
  "name": "rsrc-monorepo",
  "private": true,
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.5.0"
  },
  "scripts": {
    "build": "lerna run build",
    "prebuild": "lerna run build",
    "dev": "lerna run dev --parallel --stream",
    "lint": "lerna run lint",
    "jest": "lerna run jest",
    "release": "lerna version",
    "publish": "yarn build && lerna publish",
    "publish:dev": "yarn build && lerna publish --npm-tag next",
    "test": "lerna run test",
    "up": "yarn upgrade-interactive --latest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "husky": "^1.2.0",
    "lerna": "^3.4.3",
    "lerna-changelog": "^0.8.2",
    "pre-commit": "1.2.2",
    "react": "^16.3",
    "react-dom": "^16.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
