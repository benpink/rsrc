{
  "name": "rsrc",
  "author": "Signal Sciences",
  "description": "React components for managing async fetch state",
  "version": "0.0.5",
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "extends browserslist-config-signalsciences"
  ],
  "keywords": [
    "react",
    "resource",
    "fetch",
    "cache"
  ],
  "homepage": "https://github.com/signalsciences/rsrc",
  "bugs": {
    "url": "https://github.com/signalsciences/rsrc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalsciences/rsrc.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "src"
  ],
  "main": "dist/cjs.js",
  "module": "dist/esm.js",
  "scripts": {
    "build": "yarn clean && rollup -c",
    "clean": "rm -rf dist",
    "dev": "yarn build --watch",
    "flow": "flow",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "jest": "jest",
    "test": "yarn flow && yarn lint && yarn jest"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ],
    "settings": {
      "polyfills": [
        "fetch",
        "Promise"
      ]
    },
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js"] }]
    }
  },
  "jest": {
    "preset": "jest-preset-signalsciences",
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "dependencies": {
    "query-string": "^6.8.1",
    "url-template": "^2.0.8"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@testing-library/react": "^8.0.4",
    "babel-preset-signalsciences": "^0.0.5",
    "browserslist-config-signalsciences": "^0.0.1",
    "core-js": "^3.1.4",
    "eslint": "^5.16.0",
    "eslint-config-signalsciences": "^0.0.7",
    "eslint-plugin-compat": "^3.2.0",
    "eslint-plugin-flowtype": "3.10.4",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "flow-bin": "^0.102.0",
    "jest": "^24.8.0",
    "jest-fetch-mock": "^2.1.2",
    "jest-preset-signalsciences": "^1.0.0",
    "lint-staged": "^9.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "regenerator-runtime": "^0.13.2",
    "rollup-config-signalsciences": "^0.0.8"
  }
}
