{
  "name": "rsrc",
  "author": "Signal Sciences",
  "description": "React components for managing async fetch state",
  "version": "0.0.3",
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "extends browserslist-config-signalsciences"
  ],
  "keywords": [
    "react",
    "resource",
    "fetch",
    "cache"
  ],
  "homepage": "https://github.com/signalsciences/rsrc",
  "bugs": {
    "url": "https://github.com/signalsciences/rsrc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalsciences/rsrc.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "src"
  ],
  "main": "dist/cjs.js",
  "module": "dist/esm.js",
  "scripts": {
    "build": "yarn clean && rollup -c",
    "clean": "rm -rf dist",
    "dev": "yarn build --watch",
    "flow": "flow",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "jest": "jest",
    "test": "yarn flow && yarn lint && yarn jest"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ],
    "settings": {
      "polyfills": [
        "fetch",
        "Promise",
        "Promise.reject",
        "Promise.resolve",
        "Request",
        "Response"
      ]
    },
    "rules": {
      "react/jsx-filename-extension": "off"
    }
  },
  "jest": {
    "preset": "jest-preset-signalsciences",
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "dependencies": {
    "query-string": "^6.4.2",
    "url-template": "^2.0.8"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.0.0",
    "babel-preset-signalsciences": "^0.0.5",
    "browserslist-config-signalsciences": "^0.0.1",
    "eslint": "^5.16.0",
    "eslint-config-signalsciences": "^0.0.6",
    "eslint-plugin-compat": "^3.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "^0.95.1",
    "flow-typed": "^2.5.1",
    "jest": "^24.6.0",
    "jest-fetch-mock": "^2.1.1",
    "jest-preset-signalsciences": "^0.0.7",
    "lint-staged": "^8.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-testing-library": "^6.0.4",
    "rollup-config-signalsciences": "^0.0.6",
    "rollup-plugin-bundle-size": "^1.0.3"
  }
}
